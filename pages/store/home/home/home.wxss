/** 侧栏 */
.sidebar {
  position: fixed;
  top: 3rem;
  left: 0;
  width: 15%;
  height: 100%;
  margin: 0;
  padding: 0;
  height: calc(100% - 3rem);
  text-align: center;
  overflow-x: hidden;
  overflow-y: auto;
}

.sidebarDetail {
  background-color: #6662;
  width: 100%;
  height: 4rem;
  line-height: 4rem;
  text-align: center;
}

.sidebar .sidebarDetail:last-child {
  padding-bottom: 15rem;
}

.sidebarDetailPrevious {
  border-radius: 0 1rem 0 0;
}

.sidebarDetailOnly {
  background-color: #fff;
  color: #0f0;
}

.sidebarDrtaileNext {
  border-radius: 0 0 1rem 0;
}

.ringhtContent {
  position: fixed;
  top: 3rem;
  left: 15%;
  width: 85%;
  margin: 0;
  padding: 0;
  height: calc(100% - 3rem);
}

.list {
  position: relative;
  background-color: #fff9;
  top: 0;
  left: 0;
  padding: 0;
  margin: 0;
  width: 100%;
  height: auto;
}

.ringhtContent .list:last-child {
  padding-bottom: 15rem;
}

.listTitle {
  position: sticky;
  top: 0;
  left: 0;
  z-index: 1000;
  width: calc(100% - 2rem);
  background-color: #fff;
  height: 2rem;
  line-height: 2rem;
  padding: 0 0 0 2rem;
  margin: 0;
}

.detail {
  position: relative;
  top: 0;
  left: 0;
  width: calc(100% - 3rem);
  height: 5rem;
  margin: 1.5rem;
}

.detailAdd {
  position: absolute;
  bottom: .2rem;
  right: 0.2rem;
}

.detailReduce {
  position: absolute;
  bottom: 0.2rem;
  right: 2rem;
  width: 4rem;
  height: 1.5rem;
  line-height: 1.5rem;
  overflow: hidden;
}

.img {
  position: absolute;
  top: 2%;
  left: 2%;
  width: 30%;
  height: 96%;
  border-radius: 1.5rem 1rem 0 1rem;
  z-index: 0;
}

.detailTitle,
.detailContent,
.detailPrice {
  position: absolute;
  left: 35%;
}

.detailTitle {
  top: 2%;
}

.detailContent {
  top: 2rem;
  font-style: oblique;
  font-variant: small-caps;
  font-size: smaller;
}

.detailPrice {
  bottom: 2%;
}

.goHome {
  height: 3rem;
  line-height: 3rem;
  font-size: large;
  font-style: italic;
  width: 100%;
  margin: 0;
  padding: 0;
  text-align: center;
}

.store {
  position: fixed;
  bottom: 0rem;
  left: 2rem;
}